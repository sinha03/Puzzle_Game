<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Game"
    android:background="#090336">

    <AbsoluteLayout
        android:layout_height="wrap_content"
        android:id="@+id/GameField"
        android:layout_width="fill_parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"
        >

        <Button
            android:id="@+id/Button00"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="5px"
            android:layout_y="5px"
            android:text="0"
            android:textColor="#090336"
            android:textSize="48px"
            android:background="#ff6342">

        </Button>
        <Button android:id="@+id/Button01"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="110px"
            android:layout_y="5px"
            android:text="1"
            android:textColor="#ff6342"
            android:background="#FFA834"
            android:textSize="48px">

        </Button>
        <Button
            android:id="@+id/Button02"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="215px"
            android:layout_y="5px"
            android:text="2"
            android:textColor="#ff6342"
            android:background="#FFA834"
            android:textSize="48px">
        </Button>
        <Button android:id="@+id/Button03"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="5px"
            android:layout_y="110px"
            android:text="3"
            android:textColor="#ff6342"
            android:background="#FFA834"
            android:textSize="48px">

        </Button>
        <Button android:id="@+id/Button04"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="110px"
            android:layout_y="110px"
            android:text="4"
            android:textColor="#ff6342"
            android:background="#FFA834"
            android:textSize="48px">

        </Button>
        <Button android:id="@+id/Button05"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="215px"
            android:layout_y="110px"
            android:text="5"
            android:textColor="#ff6342"
            android:background="#FFA834"
            android:textSize="48px">

        </Button>
        <Button android:id="@+id/Button06"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="5px"
            android:layout_y="215px"
            android:text="6"
            android:textColor="#ff6342"
            android:background="#FFA834"
            android:textSize="48px">

        </Button>
        <Button android:id="@+id/Button07"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="110px"
            android:layout_y="215px"
            android:text="7"
            android:textColor="#ff6342"
            android:background="#FFA834"
            android:textSize="48px">

        </Button>
        <Button android:id="@+id/Button08"
            android:layout_height="100px"
            android:layout_width="100px"
            android:layout_x="215px"
            android:layout_y="215px"
            android:text="8"
            android:textColor="#ff6342"
            android:background="#FFA834"
            android:textSize="48px">

        </Button>
    </AbsoluteLayout>

    <TextView android:layout_below="@+id/GameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MoveText"
        android:textSize="30px"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="#ff6342"
        android:text="@string/moves_title">

    </TextView>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/MoveText"
        android:id="@+id/FeedbackTitleText"
        android:text="@string/feedback_title"
        android:textColor="#ff6342"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textSize="30px"></TextView>

    <TextView
        android:layout_below="@+id/GameField"
        android:layout_toRightOf="@+id/MoveText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MoveCounter"
        android:text="0"
        android:textSize="30px"
        android:layout_marginTop="30dp"
        android:textColor="#ff6342"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@+id/MoveText">

    </TextView>




    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="30px"
        android:textColor="#ff6342"
        android:id="@+id/FeedbackText"
        android:layout_alignRight="@+id/GameField"
        android:layout_below="@+id/FeedbackTitleText"
        android:text="@string/game_feedback_text">

    </TextView>
</RelativeLayout>